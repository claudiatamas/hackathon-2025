{% extends 'layout.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
<div class="mt-20 flex justify-center px-4">
    <div class="w-full max-w-md bg-white shadow-lg rounded-xl p-8 min-h-[400px]">
        <h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">Login</h1>
        <form action="/login" method="POST" class="space-y-5">
            <div>
                <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                <input type="text" id="username" name="username" required
                    value="{{ username|e }}"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition duration-200">
                {% if errors.username %}
                    <p class="text-red-600 text-sm mt-1">{{ errors.username }}</p>
                {% endif %}
            </div>
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input type="password" id="password" name="password" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition duration-200">
                {% if errors.password %}
                    <p class="text-red-600 text-sm mt-1">{{ errors.password }}</p>
                {% endif %}
            </div>

            {% if errors.general %}
                <p class="text-red-600 text-sm mt-3 text-center">{{ errors.general }}</p>
            {% endif %}

            <button type="submit"
                    class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 rounded-lg transition duration-200">
                Sign In
            </button>
        </form>

        <p class="text-sm text-center text-gray-500 mt-4">
            Don't have an account? <a href="/register" class="text-blue-500 hover:underline">Sign Up</a>
        </p>
    </div>
</div>
{% endblock %}
